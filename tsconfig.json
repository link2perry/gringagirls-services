{
  "compilerOptions": {
      "module": "commonjs",
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "baseUrl": "src",
      "outDir": "dist",
      "paths":{
        "dao/*": ["dao/*"],      
        "mapper/*": ["mapper/*"],
        "model/*": ["model/*"],
        "service/*": ["service/*"],
      }

  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}